""" Map leader to space --------------------------------------------------------
let mapleader = ' '

""" General settings ----------------------------------------------------------
set clipboard+=ideaput,unnamedplus
"set clipboard+=ideaput
set hlsearch
set incsearch
set matchpairs
set notimeout
set number
set relativenumber
set scrolloff=5
set showcmd
set showmode
set smartcase
set timeoutlen = 5000
set undolevels=10000
"set visualbell

""" IDE Keymaps ----------------------------------------------------------------
nnoremap <leader>r :action Replace<CR>
map <leader>fa <Action>(FindAction)
map <leader>ff <Action>(GotoFile)
map <leader>fr <Action>(RenameFile)
map <leader>pr <Action>(Run)
map <leader>sa <Action>(SearchEverywhere)
map <leader>wu <Action>(UnsplitAll)
map <leader>wc <Action>(CloseAllEditorsButActive)

""" Plugins --------------------------------------------------------------------
set easymotion
set ideajoin
set NERDTree
set surround
set which-key

""" NERDTree Configuration -----------------------------------------------------
map <leader>o :NERDTreeToggle<CR>
map <leader>h :NERDTreeFind<CR>

""" which-key Configuration ----------------------------------------------------
let g:WhichKey_ShowVimActions = "true"

""" CoPilot Configuration -----------------------------------------------------
map <leader>pc <Action>(copilot.chat.show)
