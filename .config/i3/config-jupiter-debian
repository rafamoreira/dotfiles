exec setxkbmap -layout "br" -variant "thinkpad" -option "caps:super"


bindsym $mod+Control+Shift+i mode $keyboardMode
set $keyboardMode "keyboard i=us intl, u=us, b=br"
mode $keyboardMode {
    bindsym i exec "setxkbmap us intl", mode "default"
    bindsym u exec "setxkbmap us", mode "default"
    bindsym b exec "setxkbmap br -option 'ctrl:nocaps'", mode "default"
    # bindsym e exec "setxkbmap gb", mode "default"
    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

