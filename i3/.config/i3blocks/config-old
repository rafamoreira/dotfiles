# Memory usage
#
# The type defaults to "mem" if the instance is not specified.
[memory]
label=RAM 
interval=30

[memory]
label=SWP 
instance=swap
interval=30

# Disk usage
#
# The directory defaults to $HOME if the instance is not specified.
# The script may be called with a optional argument to set the alert
# (defaults to 10 for 10%).
[disk]
label=/:
DIR=/
interval=30

# Network interface monitoring
#
# If the instance is not specified, use the interface used for default route.
# The address can be forced to IPv4 or IPv6 with -4 or -6 switches.
[iface]
IFACE=enp2s0
label=
color=#00FF00
interval=10

[iface]
IFACE=wlo1
label=wifi
color=#00FF00
interval=10

# CPU usage
[cpu_usage2]
# command=$SCRIPT_DIR/cpu_usage2
markup=pango
interval=persist
min_width=CPU 100%
#REFRESH_TIME=1
#LABEL=CPU
#WARN_PERCENT=50
#CRIT_PERCENT=80
DECIMALS=0

[battery2]
markup=pango
interval=60

[key_layout]
markup=pango
interval=persist
[kbdd_layout]
interval=persist

[time]
command=date
interval=5
